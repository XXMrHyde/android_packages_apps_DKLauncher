<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:id="@+id/action_bar_main"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:background="@color/primary"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_ab_back_material"
                android:background="@drawable/item_background_borderless_material"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/dialog_color_picker_title"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/edit_hex"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_action_edit"
                android:background="@drawable/item_background_borderless_material"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/palette"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_action_palette"
                android:background="@drawable/item_background_borderless_material"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/reset"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_action_reset"
                android:background="@drawable/item_background_borderless_material"
                android:scaleType="centerInside" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_bar_edit_hex"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/action_bar_edit_hex_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_ab_back_material"
                android:background="@drawable/item_background_borderless_material"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/hex" />

            <EditText
                android:id="@+id/hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_material"
                android:textSelectHandleLeft="@drawable/text_select_handle_left_material"
                android:textSelectHandleRight="@drawable/text_select_handle_right_material"
                android:textSelectHandle="@drawable/text_select_handle_middle_material"
                android:textCursorDrawable="@drawable/text_cursor_material"
                android:textSize="16sp"
                android:hint="@string/hex_hint" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/enter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_action_set"
                android:background="@drawable/item_background_borderless_material"
                android:scaleType="centerInside" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/divider" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.margaritov.preference.colorpicker.ColorPickerView 
            android:id="@+id/color_picker_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.5dp"
            android:layout_marginBottom="8.5dp"
            android:layout_marginLeft="8.5dp"
            android:tag="landscape"
            android:layerType="software"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_5"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_6"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_7"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

                <net.margaritov.preference.colorpicker.ColorPickerPanelView
                    android:id="@+id/panel_view_8"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="@string/press_color_to_apply"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <net.margaritov.preference.colorpicker.ColorPickerPanelView
                android:id="@+id/old_color_panel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/arrow_down" />

            <net.margaritov.preference.colorpicker.ColorPickerPanelView
                android:id="@+id/new_color_panel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.5"
            />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

